{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Effect Log Entry",
  "type": "object",
  "required": ["trace_id", "tenant_id", "session_id", "sequence", "event"],
  "properties": {
    "trace_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{32}$"
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "sequence": {
      "type": "integer",
      "minimum": 1
    },
    "event": {
      "type": "string",
      "enum": ["state_write", "session_start", "session_end"]
    },
    "payload_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "additionalProperties": false
}
